{% extends "private/pages/admin/CRUDs/Read/Read.html.twig" %}
{% block innerTitle %}Users{% endblock %}
{% block thead %}
    <th>Id</th>
    <th>Visibility</th>
    <th>Nom</th>
    <th>Pr√©nom</th>
    <th>Email</th>
    <th>Actions</th>
{% endblock %}
{% block tbody %}
    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>
                <a role="button" class="btn btn-secondary" href="{{ path("crud_update_user_statut") }}/{{ user.username }}">
                    <i class="fas fa-eye"></i>
                </a>
            </td>
            <td>{{ user.thename }}</td>
            <td>{{ user.thesurname }}</td>
            <td>{{ user.themail }}</td>
            <td class="d-flex justify-content-between">
                <div>
                    <a role="button" class="btn btn-secondary" href="{{ path("crud_read_user") }}/{{ user.username }}">
                        <i class="fab fa-readme"></i>
                    </a>
                </div>
                <div>
                    <a role="button" class="btn btn-secondary" href="{{ path("crud_update_user") }}/{{ user.username }}">
                        <i class="fas fa-pen"></i>
                    </a>
                </div>
                <div>
                    <a role="button" class="btn btn-secondary" href="{{ path("crud_ban_user") }}/{{ user.username }}">
                        <i class="fas fa-ban"></i>
                    </a>
                </div>
            </td>
        </tr>
    {% endfor %}
{% endblock %}